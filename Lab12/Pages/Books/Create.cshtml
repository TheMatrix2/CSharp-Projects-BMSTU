@page
@model Lab12.Pages.Books.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h1>New book</h1>
        </div>
        <div class="card-body">
            <div class="passEditRowName">
                <label asp-for="Book.Title">Title: </label>
                <input asp-for="Book.Title" placeholder="@Model.Book.Title"/>
            </div>
            <div class="passEditRowAuthor">
                <label asp-for="Book.AuthorID">Author: </label>
                <select asp-for="Book.AuthorID" class="custom-select mr-2">
                    @foreach (var author in Model.Authors)
                    {
                        <option value="@author.ID">@author.Name</option>
                    }
                </select>
            </div>
            <div class="passEditRowPublisher">
                <label asp-for="Book.PublisherID">Publisher: </label>
                <select asp-for="Book.PublisherID" class="custom-select mr-2">
                    @foreach (var publisher in Model.Publishers)
                    {
                        <option value="@publisher.ID">@publisher.Name</option>
                    }
                </select>
            </div>
        </div>
    </div>
    <div>
        <button class="btn41-43 btn-43" type="submit">Create</button>
        <a class="btn41-43 btn-43" asp-page="./Index">Cancel</a>
    </div>
</form>