@page "{id}"
@model Lab12.Pages.Publishers.EditPublisher
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    Layout = "_Layout";
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h1>Edit publisher</h1>
        </div>
        <div class="card-body">
            <div class="passEditRowName">
                <label asp-for="Publisher.Name">Edit name: </label>
                <input asp-for="Publisher.Name" placeholder="@Model.Publisher.Name"/>
            </div>
        </div>
    </div>
    <div>
        <button class="btn41-43 btn-43" type="submit">Update</button>
        <a class="btn41-43 btn-43" asp-page="./Index">Cancel</a>
    </div>
    
</form>